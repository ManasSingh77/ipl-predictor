<%- include('partials/header') %>

<h2>Vote for the Match</h2>
<p>Match Date: <%= match.date.toDateString() %></p>
<p>Select a team to vote for:</p>
<form action="/vote/<%= match._id %>" method="POST" onsubmit="return confirmVote()">
  <% match.teams.forEach(function(team) { %>
    <div>
      <input type="radio" id="<%= team %>" name="team" value="<%= team %>" required>
      <label for="<%= team %>"><%= team %></label>
    </div>
  <% }); %>
  <input type="hidden" name="confirm" value="yes">
  <button type="submit">Submit Vote</button>
</form>

<script>
  function confirmVote() {
    return confirm("Are you sure you want to vote for this team?");
  }
</script>

<%- include('partials/footer') %>